{
  "name": "workspace",
  "version": "1.0.0",
  "description": "My apps workspace",
  "keywords": [
    "workspace",
    "monorepo",
    "turbo",
    "pnpm",
    "apps",
    "ai"
  ],
  "license": "ISC",
  "author": "Niv Guler",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:app:finance-tracker": "turbo dev --filter=finance-tracker",
    "dev:templates": "turbo dev --filter='./templates/*'",
    "dev:template:api-server": "turbo dev --filter=api-server",
    "dev:template:client-server": "turbo dev --filter=client-server",
    "dev:template:client-server-database": "turbo dev --filter=client-server-database",
    "dev:template:landing-page": "turbo dev --filter=landing-page",
    "build": "turbo build",
    "build:app:finance-tracker": "turbo db:generate --filter=finance-tracker && turbo build --filter=finance-tracker --env-mode=loose",
    "build:app:finance-tracker:railway": "cd apps/finance-tracker && pnpm run db:generate && cd ../.. && turbo build --filter=finance-tracker",
    "build:utils": "turbo build --filter=@workspace/utils",
    "build:database": "turbo build --filter=@workspace/database",
    "start:app:finance-tracker": "turbo start --filter=finance-tracker --env-mode=loose",
    "test": "./change-db-state.sh --up && vitest --run && ./change-db-state.sh --down || ./change-db-state.sh --down",
    "test:coverage": "./change-db-state.sh --up && vitest run --coverage && ./change-db-state.sh --down || ./change-db-state.sh --down",
    "test:database": "./change-db-state.sh --up && vitest --run --project database && ./change-db-state.sh --down || ./change-db-state.sh --down",
    "test:finance-tracker": "./change-db-state.sh --up && vitest --run --project finance-tracker && ./change-db-state.sh --down || ./change-db-state.sh --down",
    "lint": "turbo lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:up": "./change-db-state.sh --up",
    "db:down": "./change-db-state.sh --down",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": "prettier --write",
    "*.{js,ts,vue}": "eslint --fix"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "bcrypt"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "prettier": "^3.4.2",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.1.1"
  }
}
